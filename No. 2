#include <iostream>

using namespace std;

int main()
{
    int bulan;
    float saldo,bunga,badmin,jmlh,sbunga,sbadmin;
    
    cout<<"Saldo anda : ";
    cin>>saldo;
    cout<<"Lama menabung : ";
    cin>>bulan;
    
    bunga=(0.06);
    badmin=(0.00125/16);
    jmlh= (saldo) + (saldo*bunga) - (saldo*badmin);
    cout<<"Saldo Terkahir: " << jmlh;


return 0;
}
